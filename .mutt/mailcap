# handle octet-stream attachments
mime_lookup application/octet-stream
text/html ; uconv --add-signature -f %{charset} -t UTF-8 %s | sponge %s && sensible-browser %s & sleep 2 ; description="HTML Document" ; test=test -n "$DISPLAY" ; nametemplate=%s.html
# editing email with Goyo enabled - need to stay after HTML
text/* ; nvim -Rc Goyo '%s' ; edit=nvim -c Goyo '%s' ; compose=nvim -c Goyo '%s' ; needsterminal

# Terminal programs
# application/ics;          khal import -a $from %s; needsterminal
# text/calendar;            khal import -a $from %s; needsterminal
application/ms-tnef;      tnef -w %s;              needsterminal

# GUI programs
application/*;            mutt-open.sh %s
image/*;                  mutt-open.sh %s
text/*;                   mutt-open.sh %s

