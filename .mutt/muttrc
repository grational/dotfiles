# my variables
set my_mhome='~/.mutt'
set my_acc_dir="$my_mhome/accounts"
set my_sig_dir="$my_mhome/signatures"
set my_iol_gr='it.italiaonline.giuseppe.ricupero'
set my_gmail_gr="com.gmail.giuseppe.ricupero"
set my_gmail_sn="com.gmail.soul.nassau"
set my_polito_gr="it.polito.giuseppe.ricupero"
set my_cert_gr="it.postecert.giuseppe.ricupero"
set my_current_year="`date +'%Y'`"

# certificate
set certificate_file = "$my_mhome/certificates"

# Default account
source $my_acc_dir/$my_iol_gr

# Macros
source "$my_mhome/macros"

# miscellaneous
source "$my_mhome/miscellaneous"

# alias settings
set alias_file = $my_mhome/aliases
source $alias_file

## sidebar configuration
source $my_mhome/sidebar

## mailcap
# autoview for all the types supported in mailcap
set implicit_autoview
set mailcap_path = $my_mhome/mailcap
## mailcap - end

# theme
source $my_mhome/themes/solarized.muttrc
